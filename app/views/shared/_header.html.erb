<header class="flex items-center justify-between px-5 py-4">
  <div class="text-2xl font-title">
    <span class="text-primary-500">bandcamp</span>
  </div>
  <div class="flex items-center space-x-4">
    <% if user_signed_in? %>
      <%= link_to profile_path, class: "flex items-center space-x-3 hover:opacity-80 transition-opacity" do %>
        <%= image_tag current_user.avatar.presence || "default_avatar.png", 
            class: "w-8 h-8 rounded-full object-cover",
            alt: current_user.username %>
        <div class="text-sm">
          <p class="font-medium"><%= current_user.username %></p>
        </div>
      <% end %>
    <% else %>
      <%= link_to "sign up", new_user_session_url, class: "text-neutral-500 hover:text-neutral-50" %>
      <%= link_to "log in", new_user_registration_url, class: "text-neutral-500 hover:text-neutral-50" %>
    <% end %>
  </div>
</header> 