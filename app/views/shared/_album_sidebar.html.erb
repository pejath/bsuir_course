<div id="album-sidebar" class="hidden w-80 bg-neutral-900 p-4 border-l border-neutral-700 h-screen sticky top-0">
  <div class="space-y-4">
    <div id="sidebar-cover-image" class="w-full h-64 bg-neutral-800">
      <!-- Album cover will be loaded here -->
    </div>
    
    <div class="space-y-2">
      <h2 id="sidebar-album-title" class="text-xl text-neutral-200"></h2>
      <p id="sidebar-artist-name" class="text-sm text-neutral-400"></p>
    </div>

    <div class="border-t border-neutral-700 py-3">
      <div id="sidebar-track" class="plyr__container">
        <audio id="audioSource" class="plyr-audio" data-album-sidebar-target="player">
          <source id="audio-source" type="audio/mp3" />
          Your browser does not support the audio element.
        </audio>
      </div>
      <div>
        <p id="sidebar-track-name" class="text-sm text-neutral-300 mt-2">Sample Track</p>
      </div>
    </div>

    <button class="w-full py-2 px-4 bg-neutral-800 hover:bg-neutral-700 text-neutral-200 rounded-md flex items-center justify-center space-x-2">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
      </svg>
      <span>Add to Favorites</span>
    </button>
  </div>
</div> 
