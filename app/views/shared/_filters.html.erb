<div class="px-5 space-y-4" data-controller="filters">
  <h2 class="text-lg font-medium text-neutral-200 mb-2">Genres</h2>
  
  <div class="flex flex-wrap gap-2">
    <% @genres.each do |genre| %>
      <button data-filters-target="genre"
              data-action="click->filters#toggle"
              data-genre-id="<%= genre.id.to_s %>"
              class="px-3 py-1 bg-neutral-700 rounded-full text-sm hover:bg-neutral-600 transition-colors">
        <%= genre.name %>
      </button>
    <% end %>
    
    <button data-action="click->filters#clearAll"
            class="px-3 py-1 bg-neutral-800 text-neutral-400 rounded-full text-sm hover:bg-neutral-700 hover:text-white transition-colors border border-neutral-700">
      Clear all
    </button>
  </div>
</div> 